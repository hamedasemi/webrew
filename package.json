{
  "name": "webrew",
  "webrewrc": {
    "port": "8080"
  },
  "version": "0.0.8",
  "description": "Brew a web project.",
  "babel": {
    "presets": [
      "es2015",
      "stage-3",
      "stage-0"
    ],
    "plugins": [
      [
        "babel-root-import",
        [
          {
            "rootPathPrefix": "~",
            "rootPathSuffix": "./dist"
          }
        ]
      ]
    ],
    "sourceMaps": "inline"
  },
  "bin": {
    "webrew": "./bin/webrew"
  },
  "main": "./dist/core/webrew.js",
  "scripts": {
    "link": "npm run clean && npm link",
    "clean": "rm -r ./dist",
    "prestart": "npm run build",
    "prepublish": "npm run build",
    "start": "node ./dist/core/webrew.js",
    "build": "babel --no-babelrc ./src  --out-dir ./dist --ignore dist,node_modules --presets=es2015,stage-3,stage-0,babel-polyfill --plugins=transform-runtime,babel-root-import --source-maps=inline",
    "test": "mocha --watch --require babel-polyfill --compilers js:babel-register ./modules/**/*.test.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hamedasemi/webrew.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/hamedasemi/webrew/issues"
  },
  "homepage": "https://github.com/hamedasemi/webrew#readme",
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-eslint": "^7.1.1",
    "babel-plugin-transform-runtime": "^6.15.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-stage-0": "^6.0.15",
    "babel-preset-stage-3": "^6.17.0",
    "babel-root-import": "^4.1.5",
    "eslint": "^3.12.2",
    "mocha": "^3.2.0"
  },
  "dependencies": {
    "autoprefixer": "^6.6.0",
    "babel-polyfill": "^6.16.0",
    "babel-register": "^6.18.0",
    "chalk": "^1.1.3",
    "cross-spawn": "^5.0.1",
    "gulp": "github:gulpjs/gulp#4.0",
    "gulp-babel": "^6.1.2",
    "gulp-cli": "^1.2.2",
    "gulp-newer": "^1.3.0",
    "gulp-polymer-babel": "^1.0.0",
    "gulp-polymer-postcss": "^1.0.0",
    "gulp-rename": "^1.2.2",
    "http2": "^3.3.6",
    "js-yaml": "^3.7.0",
    "koa": "^2.0.0-alpha.7",
    "koa-router": "^7.0.1",
    "koa-static": "^3.0.0",
    "object-assign": "^4.1.0",
    "readable-stream": "^2.2.2",
    "request": "^2.79.0",
    "stream-combiner2": "^1.1.1",
    "unzip": "^0.1.11",
    "vinyl": "^2.0.1",
    "webrew-helpers-debug": "0.0.2",
    "webrew-helpers-log": "0.0.7",
    "yauzl": "^2.7.0"
  }
}
